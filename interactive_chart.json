{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Interactive line: global August temperature anomalies (째C).",
  "width": 700,
  "height": 350,
  "data": {
    "url": "https://raw.githubusercontent.com/mmoyann/fit3179-week9-map/main/data.csv"
  },

  "params": [
    {
      "name": "minYear",
      "value": 1850,
      "bind": {"input": "range", "min": 1850, "max": 2025, "step": 1, "name": "From year: "}
    },
    {
      "name": "maxYear",
      "value": 2025,
      "bind": {"input": "range", "min": 1850, "max": 2025, "step": 1, "name": "To year: "}
    }
  ],

  "transform": [
    {"filter": "datum.Year >= minYear && datum.Year <= maxYear"}
  ],

  "layer": [
    {
      "mark": {"type": "line", "strokeWidth": 2},
      "encoding": {
        "x": {"field": "Year", "type": "quantitative", "title": "Year"},
        "y": {"field": "Anomaly", "type": "quantitative", "title": "Temperature anomaly (째C)"},
        "tooltip": [
          {"field": "Year", "type": "quantitative"},
          {"field": "Anomaly", "type": "quantitative", "format": ".2f", "title": "Anomaly (째C)"}
        ]
      }
    },
    { "mark": {"type": "rule", "strokeDash": [3,3]}, "encoding": { "y": {"datum": 0} } },
    { "mark": {"type": "rule", "color": "#c00", "strokeDash": [4,4]},
      "encoding": { "y": {"datum": 1.5} } },
    { "mark": {"type": "text", "align": "left", "dx": 4, "dy": -6, "color": "#c00"},
      "encoding": {
        "x": {"aggregate": "max", "field": "Year"},
        "y": {"datum": 1.5},
        "text": {"value": "1.5째C threshold"}
      }
    },
    {
      "transform": [{"aggregate": [{"op": "argmax", "field": "Anomaly", "as": "maxRec"}]},
                    {"flatten": ["maxRec"]}],
      "mark": {"type": "text", "dy": -10, "fontStyle": "italic"},
      "encoding": {
        "x": {"field": "maxRec.Year", "type": "quantitative"},
        "y": {"field": "maxRec.Anomaly", "type": "quantitative"},
        "text": {"value": "Highest recorded"}
      }
    }
  ]
}
