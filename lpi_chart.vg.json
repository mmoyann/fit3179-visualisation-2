{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Living Planet Index (1970 = 1)",
  "width": 1000,
  "height": 420,

  "data": { "url": "global-living-planet-index.csv" },

  "params": [
    {
      "name": "FromYear",
      "value": 1970,
      "bind": { "input": "range", "min": 1970, "max": 2020, "step": 1, "name": " From: " }
    }
  ],

  "transform": [
    { "filter": "datum.Entity == 'World'" },
    { "filter": "isValid(datum.Year) && isValid(datum['Living Planet Index'])" },
    { "calculate": "toNumber(datum.Year)", "as": "YearNum" },
    { "calculate": "toNumber(datum['Living Planet Index'])", "as": "LPI100" },
    { "filter": "datum.YearNum >= FromYear" }
  ],

  "encoding": {
    "x": { "field": "YearNum", "type": "quantitative", "title": "Year", "axis": { "tickCount": 10 } },
    "y": {
      "field": "LPI100",
      "type": "quantitative",
      "title": "Index (1970 = 100)",
      "scale": { "zero": false }
    }
  },

  "layer": [
    { "mark": { "type": "rule", "strokeDash": [4, 4], "opacity": 0.5 }, "encoding": { "y": { "value": 100 } } },
    { "mark": { "type": "line", "strokeWidth": 2, "color": "#2ca02c" } },
    {
      "mark": { "type": "point", "filled": true, "size": 36, "opacity": 0.85, "color": "#2ca02c" },
      "encoding": {
        "tooltip": [
          { "field": "YearNum", "title": "Year" },
          { "field": "LPI100", "type": "quantitative", "format": ".0f", "title": "Index (1970 = 100)" }
        ]
      }
    }
  ],

  "config": {
    "view": { "stroke": null },
    "axis": { "labelFont": "Inter", "titleFont": "Inter" }
  }
}
