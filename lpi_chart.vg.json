{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Living Planet Index (1970 = 1)",
  "width": 1000,
  "height": 420,

  "data": { "url": "global-living-planet-index.csv" },

  "params": [
    {
      "name": "FromYear",
      "value": 1970,
      "bind": { "input": "range", "min": 1970, "max": 2020, "step": 1, "name": " From: " }
    }
  ],

  "transform": [
    { "filter": "datum.Entity == 'World'" },
    { "calculate": "toNumber(datum.Year)", "as": "YearNum" },
    { "filter": "datum.YearNum >= FromYear" },

    /* IMPORTANT: your CSV is already 1970=100, so just coerce to number */
    { "calculate": "toNumber(datum['Living Planet Index'])", "as": "LPI_1970eq100" },
    { "calculate": "datum.LPI_1970eq100 / 100", "as": "LPI_1970eq1" }  /* for tooltip in 1970=1 terms */
  ],

  "encoding": {
    "x": {
      "field": "YearNum",
      "type": "quantitative",
      "title": "Year",
      "axis": { "tickCount": 10, "orient": "bottom" }
    },
    "y": {
      "field": "LPI_1970eq100",
      "type": "quantitative",
      "title": "Index (1970 = 100)",
      "scale": { "zero": false },
      "axis": { "orient": "left" }
    }
  },

  "layer": [
    {
      "mark": { "type": "rule", "strokeDash": [4, 4], "opacity": 0.5 },
      "encoding": { "y": { "value": 100 } }
    },

    { "mark": { "type": "line", "interpolate": "monotone", "strokeWidth": 2, "color": "#2ca02c" } },

    {
      "mark": { "type": "circle", "size": 32, "opacity": 0.85, "color": "#2ca02c" },
      "encoding": {
        "tooltip": [
          { "field": "YearNum", "type": "quantitative", "title": "Year" },
          { "field": "LPI_1970eq1", "type": "quantitative", "format": ".2f", "title": "Index (1970 = 1)" },
          { "field": "LPI_1970eq100", "type": "quantitative", "format": ".0f", "title": "Index (1970 = 100)" }
        ]
      }
    },

    /* Lowest biodiversity label â€“ now with explicit x/y so no extra scales appear */
    {
      "transform": [
        { "window": [ { "op": "rank", "as": "r" } ], "sort": [ { "field": "LPI_1970eq100", "order": "ascending" } ] },
        { "filter": "datum.r == 1" },
        { "calculate": "'Lowest biodiversity: ' + datum.YearNum", "as": "label" }
      ],
      "layer": [
        {
          "mark": { "type": "rule", "strokeDash": [4, 4], "opacity": 0.5 },
          "encoding": { "x": { "field": "YearNum" } }
        },
        {
          "mark": { "type": "text", "align": "left", "dx": 6, "dy": -6, "fontStyle": "italic" },
          "encoding": {
            "x": { "field": "YearNum" },
            "y": { "field": "LPI_1970eq100" },
            "text": { "field": "label" }
          }
        }
      ]
    }
  ],

  "config": {
    "axis": { "labelFont": "Inter", "titleFont": "Inter" },
    "view": { "stroke": null }
  }
}
