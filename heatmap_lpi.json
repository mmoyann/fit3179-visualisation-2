{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "LPI heatmap by region and year.",
  "width": 900,
  "height": {"step": 20},

  "data": {
    "url": "global-living-planet-index.csv",
    "format": {
      "type": "csv",
      "parse": { "Year": "number", "Living Planet Index": "number" }
    }
  },

  "transform": [
    { "filter": "isValid(datum.Entity) && isValid(datum.Year) && isValid(datum['Living Planet Index'])" },
    { "calculate": "datum['Living Planet Index'] * 100", "as": "LPI100" }
  ],

  "mark": { "type": "rect" },

  "encoding": {
    "x": { "field": "Year", "type": "quantitative", "title": "Year", "axis": { "tickCount": 10 } },
    "y": { "field": "Entity", "type": "nominal", "title": "Region" },
    "color": {
      "field": "LPI100",
      "type": "quantitative",
      "title": "LPI (1970 = 100)",
      "scale": { "scheme": "redyellowgreen" }
    },
    "tooltip": [
      { "field": "Entity", "title": "Region" },
      { "field": "Year", "title": "Year" },
      { "field": "LPI100", "title": "Index (1970 = 100)", "type": "quantitative", "format": ".0f" }
    ]
  },

  "config": {
    "view": { "stroke": null },
    "axis": { "labelFont": "Inter", "titleFont": "Inter" },
    "legend": { "labelFont": "Inter", "titleFont": "Inter" }
  }
}
