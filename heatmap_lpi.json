{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Living Planet Index (1970 = 100) by region and year.",
  "width": 900,
  "height": { "step": 20 },

  "data": {
    "url": "global-living-planet-index.csv",
    "format": {
      "type": "csv",
      "parse": { "Year": "number", "Living Planet Index": "number" }
    }
  },

  "transform": [
    { "filter": "isValid(datum.Entity) && isValid(datum.Year) && isValid(datum['Living Planet Index'])" },

    { "calculate": "toNumber(datum['Living Planet Index'])", "as": "LPI100" },

    {
      "aggregate": [{ "op": "mean", "field": "LPI100", "as": "LPI100_mean" }],
      "groupby": ["Entity", "Year"]
    }
  ],

  "mark": { "type": "rect" },

  "encoding": {
    "x": { "field": "Year", "type": "ordinal", "title": "Year", "sort": "ascending" },
    "y": { "field": "Entity", "type": "nominal", "title": "Region" },
    "color": {
      "field": "LPI100_mean",
      "type": "quantitative",
      "title": "LPI (1970 = 100)",
      "scale": { "scheme": "redyellowgreen" }
    }
  },

  "config": {
    "view": { "stroke": null },
    "axis": { "labelFont": "Inter", "titleFont": "Inter" },
    "legend": { "labelFont": "Inter", "titleFont": "Inter" }
  }
}
