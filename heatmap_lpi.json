{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Heatmap of the Living Planet Index by year and region (1970 = 100).",
  "width": 900,
  "height": {"step": 22},

  "data": {
    "url": "global-living-planet-index.csv",
    "format": {
      "type": "csv",
      "parse": {
        "Year": "number",
        "Living Planet Index": "number"
      }
    }
  },

  "params": [
    {
      "name": "minYear",
      "value": 1970,
      "bind": {"input": "range", "min": 1950, "max": 2025, "step": 1, "name": "From year: "}
    },
    {
      "name": "maxYear",
      "value": 2025,
      "bind": {"input": "range", "min": 1950, "max": 2025, "step": 1, "name": "To year: "}
    },
    {
      "name": "entityFilter",
      "value": "",
      "bind": {"input": "text", "name": "Filter region (optional): "}
    }
  ],

  "transform": [
    {"filter": "isValid(datum.Entity) && isValid(datum.Year) && isValid(datum['Living Planet Index'])"},
    {"filter": "datum.Year >= minYear && datum.Year <= maxYear"},
    {"filter": "entityFilter == '' || lower(datum.Entity).indexOf(lower(entityFilter)) >= 0"}
  ],

  "mark": {"type": "rect"},

  "encoding": {
    "x": {
      "field": "Year",
      "type": "quantitative",
      "title": "Year",
      "axis": {"tickCount": 10}
    },
    "y": {
      "field": "Entity",
      "type": "nominal",
      "title": "Region",
      "sort": {"op": "mean", "field": "Living Planet Index", "order": "descending"}
    },
    "color": {
      "field": "Living Planet Index",
      "type": "quantitative",
      "title": "Living Planet Index (1970 = 100)",
      "scale": {"scheme": "redyellowgreen", "domain": [50, 150]},
      "legend": {"orient": "right"}
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Region"},
      {"field": "Year", "type": "quantitative", "title": "Year"},
      {"field": "Living Planet Index", "type": "quantitative", "format": ".1f", "title": "LPI (1970=100)"}
    ]
  },

  "config": {
    "view": {"stroke": null},
    "axis": {"labelFont": "Inter", "titleFont": "Inter"},
    "legend": {"labelFont": "Inter", "titleFont": "Inter"}
  }
}
