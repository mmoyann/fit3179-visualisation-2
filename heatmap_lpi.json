{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Heatmap of Living Planet Index by Year and Region (Entity).",
  "width": 900,
  "height": {"step": 22},
  "data": {
    "url": "https://raw.githubusercontent.com/mmoyann/fit3179-week10-map/main/global-living-planet-index.csv"
  },

  "params": [
    {
      "name": "minYear",
      "value": 1970,
      "bind": {"input": "range", "min": 1950, "max": 2025, "step": 1, "name": "From year:"}
    },
    {
      "name": "maxYear",
      "value": 2025,
      "bind": {"input": "range", "min": 1950, "max": 2025, "step": 1, "name": "To year:"}
    },
    {
      "name": "entityFilter",
      "value": "",
      "bind": {"input": "text", "name": "Filter region (optional): "}
    }
  ],

  "transform": [
    { "calculate": "toNumber(datum.Year)", "as": "Year_num" },
    { "calculate": "isValid(datum['Living Planet Index']) ? toNumber(datum['Living Planet Index']) : null", "as": "Index_num" },
    { "filter": "isValid(datum.Entity) && isValid(datum.Year_num) && isValid(datum.Index_num)" },
    { "filter": "datum.Year_num >= minYear && datum.Year_num <= maxYear" },
    { "filter": "entityFilter == '' || lower(datum.Entity).indexOf(lower(entityFilter)) >= 0" },
    { "calculate": "(datum.Index_num - 100)", "as": "ChangeFromBaseline" }
  ],

  "mark": {"type": "rect"},

  "encoding": {
    "x": {
      "field": "Year_num",
      "type": "ordinal",
      "title": "Year",
      "sort": "ascending",
      "axis": {"labelAngle": 0, "labelOverlap": true}
    },
    "y": {
      "field": "Entity",
      "type": "nominal",
      "title": "Region",
      "sort": {"op": "mean", "field": "Index_num", "order": "descending"}
    },
    "color": {
      "field": "Index_num",
      "type": "quantitative",
      "title": "Living Planet Index (1970 = 100)",
      "scale": {"scheme": "redyellowgreen", "domain": [50, 150]},
      "legend": {"orient": "right"}
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Region"},
      {"field": "Year_num", "type": "quantitative", "title": "Year"},
      {"field": "Index_num", "type": "quantitative", "format": ".1f", "title": "LPI"},
      {"field": "ChangeFromBaseline", "type": "quantitative", "format": "+.1f", "title": "Change since 1970"}
    ]
  },

  "config": {
    "view": {"stroke": null},
    "axis": {"labelFont": "Inter", "titleFont": "Inter"},
    "legend": {"labelFont": "Inter", "titleFont": "Inter"}
  }
}
