{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Global land+ocean August temperature anomalies (°C) since 1850.",
  "width": 700,
  "height": 280,
  "data": {"url": "https://raw.githubusercontent.com/mmoyann/fit3179-week9-map/main/data.csv"},
  "transform": [
    {"filter": "isValid(datum.Anomaly)"}
  ],
  "layer": [
    {
      "mark": {"type": "line", "point": false},
      "encoding": {
        "x": {"field": "Year", "type": "temporal", "timeUnit": "year", "title": "Year"},
        "y": {"field": "Anomaly", "type": "quantitative", "title": "Temperature anomaly (°C)"},
        "tooltip": [
          {"field": "Year", "type": "temporal", "timeUnit": "year"},
          {"field": "Anomaly", "type": "quantitative", "format": ".2f"}
        ]
      }
    },
    {
      "mark": {"type": "rule"},
      "encoding": {"y": {"datum": 0}, "color": {"value": "#888"}}
    },
    {
      "mark": {"type": "rule"},
      "encoding": {"y": {"datum": 1.5}, "color": {"value": "#c00"}},
      "transform": [],
      "name": "ParisTarget"
    },
    {
      "mark": {"type": "text", "align": "left", "dx": 4, "dy": -6},
      "encoding": {
        "x": {"aggregate": "max", "field": "Year"},
        "y": {"datum": 1.5},
        "text": {"value": "1.5°C threshold"}
      }
    }
  ]
}
