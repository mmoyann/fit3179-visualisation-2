{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Mammals â€” Marine + Terrestrial Ranges", "fontSize": 16},
  "description": "TopoJSON of global mammal ranges with legend, filtering, graticule and tooltips.",
  "width": 1000,
  "height": 520,
  "projection": {"type": "equalEarth"},
  "params": [
    {
      "name": "status_select",
      "select": {"type": "point", "fields": ["properties.STATUS"]},
      "bind": "legend"
    }
  ],
  "layer": [
    { "data": {"sphere": true}, "mark": {"type": "geoshape", "fill": "#cfe8ff"} },
    {
      "data": {"graticule": {"step": [30, 30]}},
      "mark": {"type": "geoshape", "stroke": "#bfbfbf", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mmoyann/fit3179-week9-map/main/MAMMALS_MARINE_AND_TERRESTRIAL.json",
        "format": {"type": "topojson", "feature": "MAMMALS_MARINE_AND_TERRESTRIAL"}
      },
      "mark": {"type": "geoshape", "stroke": "#b33", "strokeWidth": 0.4},
      "encoding": {
        "color": {
          "field": "properties.STATUS",
          "type": "nominal",
          "title": "Range type",
          "legend": {"orient": "bottom", "columns": 3}
        },
        "opacity": {
          "condition": {"param": "status_select", "value": 0.9},
          "value": 0.25
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Name"},
          {"field": "properties.STATUS", "type": "nominal", "title": "Range type"}
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "legend": {"titleFont": "Inter", "labelFont": "Inter"},
    "axis": {"labelFont": "Inter", "titleFont": "Inter"}
  }
}
